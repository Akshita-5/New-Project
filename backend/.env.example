# Database
MONGODB_URI=mongodb://localhost:27017/focusmate
# or use MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/focusmate

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random_at_least_32_characters
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_refresh_token_secret_here_also_make_it_long_and_random

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your_google_client_id
